{
  "$id": "https://kendfinger.github.io/boot-os/schemas/sources.schema.json",
  "title": "Sources",
  "description": "Boot OS Sources Description",
  "type": "object",
  "properties": {
    "files": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "urls": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "checksums": {
              "type": "object",
              "properties": {
                "sha256": {
                  "type": "string",
                  "minLength": 64,
                  "maxLength": 64
                },
                "sha512": {
                  "type": "string",
                  "minLength": 128,
                  "maxLength": 128
                }
              },
              "required": [
                "sha256"
              ]
            }
          },
          "required": [
            "urls",
            "checksums"
          ]
        }
      }
    }
  },
  "required": [
    "files"
  ]
}
